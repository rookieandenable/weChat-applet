.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author {
  width: 60rpx;
  height: 60rpx;
}
.post-date {
  font-size: 26rpx;
  margin-left: 20rpx;
}
.post-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 16rpx;
  margin-bottom: 15px;
}
.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content {
  font-size: 28rpx;
  color: #333;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.post-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}
.post-like-image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}
.post-like-font {
  font-size: 26rpx;
  margin-right: 40rpx;
}